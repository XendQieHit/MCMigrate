QPushButton#button_migrate_detail {
    background-color: '#78d599';
    border: none;
    border-radius: 35px; /* 圆形按钮 */
    color: white;
    font-size: 14px;
    padding: 4px
}
QPushButton#button_migrate_detail:hover {
    background-color: '#68c488'
}

QPushButton#button_import {
    background-color: '#4B9CB2';
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px
}
QPushButton#button_import:hover {
    background-color: '#56a8be'
}
QPushButton#button_import:pressed {
    background-color: '#328197'
}

QPushButton#button_migrate {
    background-color: '#4CAF50';
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px
}
QPushButton#button_migrate:hover {
    background-color: '#5dc161'
}
QPushButton#button_migrate:pressed {
    background-color: '#3ea041'
}